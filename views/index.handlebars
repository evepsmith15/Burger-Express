<h1>BURGERS!!!!</h1>

<div class="container">
<div class="row">
<div class="col-md-6">

  <h2>Burgers Available</h2>

  <ul>
    {{#each burgers}}
    {{#unless this.devoured}}
    <div>
      <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
        <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
      </form>
    </div>
    {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="col-md-6">
  <h2>Burgers Eaten</h2>

  <ul>
    {{#each burgers}}
    {{#if this.devour}}
    <div class="eaten">
      <div>{{this.burger_name}}
      </div>
    </div>
    {{/if}}
    {{/each}}
  </ul>
</div>
</div>
</div>

<h2>Add Another Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bn">Burger Name:</label>
    <input type="text" id="bn" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>